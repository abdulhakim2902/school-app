<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css"
        integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous">

    <link rel="stylesheet" href="/css/style.css">

    <title>Register</title>
</head>

<body>
    <!-- Navbar -->

    <div class="register-container">
        <div class="register-form">
            <h4 class="mb-3">Create a new account <span><a href="/login">Already have an account?</a></span></h4>

            <div class="error mt-2">
                <% if (error) { %>
                    <span><%= error %></span>
                    <% } %>
            </div>

            <form action="/register" method="POST">

                <label class="mb-1" for="firstName">Full Name</label>
                <div class="input-group mb-3">
                    <input type="text" name="firstName" class="form-control" placeholder="First Name" required>
                    <input type="text" name="lastName" class="form-control" placeholder="Last Name">
                </div>

                <label class="mb-1" for="username">Username</label>
                <div class="input-group mb-3">
                    <input type="text" class="form-control username" name="username" required="Username cannot be empty">
                </div>
                
                <label class="mb-1" for="password">Password</label>
                <div class="input-group mb-3">
                    <input type="password" class="form-control password" name="password" required>
                </div>

                <label class="mb-1" for="email">Email</label>
                <div class="input-group mb-3">
                    <input type="email" class="form-control" name="email" required>
                </div>

                <label class="mb-1" for="birthDate">Date of Birth </label>
                <div class="input-group mb-3">
                    <input type="date" class="form-control" name="birthDate" required>
                </div>

                <label class="mb-1">Gender</label>
                <div class="mb-3">
                    <input type="radio" class="btn-check" name="gender" id="success-outlined" autocomplete="off" value="male">
                    <label style="width: 48%; float: left" class="btn btn-outline-success" for="success-outlined">Male</label>
                    
                    <input type="radio" class="btn-check" name="gender" id="danger-outlined" autocomplete="off" value="female">
                    <label style="width: 48%; float: right" class="btn btn-outline-danger" for="danger-outlined">Female</label>
                </div>

                <div class="d-grid gap-2 col-6 mx-auto register-button">
                    <button class="btn btn-primary">Sign Up</button>
                    <a href="/login" class="btn btn-info btn-danger" role="button">Cancel</a>
                </div>

            </form>
        </div>
    </div>


    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
        crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
