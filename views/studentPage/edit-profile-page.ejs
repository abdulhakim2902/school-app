<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css"
        integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
            integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <link rel="stylesheet" href="/css/style.css">

    <title>Register</title>
</head>

<body>
    <!-- Navbar -->

    <div class="register-container">
        <div class="register-form">
            <h4 class="mb-5">Edit Profile</h4>

            <form action="/student/profile/edit" method="POST" enctype="multipart/form-data">

                <label class="mb-1" for="firstName">Full Name</label>
                <div class="input-group mb-3">
                    <input type="text" name="firstName" class="form-control" placeholder="First Name" value="<%= student.firstName %>" required>
                    <input type="text" name="lastName" class="form-control" placeholder="Last Name" value="<%= student.lastName %>">
                </div>

                <label class="mb-1" for="birthDate">Place & date of birth </label>
                <div class="input-group mb-3">
                    <input type="text" class="form-control" name="birthPlace" required value="<%= student.birthPlace %>" placeholder="Birth Place">
                    <input type="date" class="form-control" name="birthDate" required value="<%= student.birthDate %>">
                </div>

                <label class="mb-1">Gender</label>
                <div class="mb-3">
                    <input <%= student.gender === 'male' ? 'checked' : '' %> type="radio" class="btn-check" name="gender" id="success-outlined" autocomplete="off"
                        value="male">
                    <label style="width: 48%; float: left" class="btn btn-outline-success"
                        for="success-outlined">Male</label>

                    <input <%= student.gender === 'female' ? 'checked' : '' %> type="radio" class="btn-check" name="gender" id="danger-outlined" autocomplete="off"
                        value="female">
                    <label style="width: 48%; float: right" class="btn btn-outline-danger"
                        for="danger-outlined">Female</label>
                </div>

                <div class="input-group mb-5 register-button">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="validatedCustomFile" aria-describedby="inputGroupFileAddon01" name="profileImg">
                        <label style="width: 100%" class="mx-auto custom-file-label" for="validatedCustomFile">Choose profile image</label>
                    </div>
                </div>

                <div style="margin-top: 0;" class="d-grid gap-2 mx-auto register-button">
                    <button style="width: 100%" class="btn btn-primary">Update</button>
                    <a style="width: 100%" href="/student/profile" class="btn btn-info btn-danger" role="button">Cancel</a>
                </div>

            </form>
        </div>
    </div>


    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
        crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
