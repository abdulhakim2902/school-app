<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css"
        integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous">

    <link rel="stylesheet" href="/css/style.css">

    <title>Home</title>
</head>

<body>
    <%- include('../partials/navbar', {nav: 'Home'}) %>
    <div class="table-container mx-auto mt-5">    
        <h4>Subjects List</h4>
        <a style="float: right;" class="btn btn-success mb-3" href="/<%= status %>/add" role="button">Add Subject</a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Subject Name</th>
                    <th>Credits</th>
                    <th>Lecturer</th>
                    <th>Max Students</th>
                    <th>Action</th>
                </tr>
            </thead>
    
            <tbody>
                
                <% subjects.forEach(subject =>  { %> 
                <tr>
                    <td class="align-middle">
                        <%= subject.name %>
                    </td>
                    <td class="align-middle">
                        <%= subject.credits %>
                    </td>
                    <td class="align-middle">
                        <%= subject.Lecturer.name %>
                    </td>
                    <td class="align-middle">
                        <%= subject.maxStudents %>
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-primary btn-sm" href="/<%= status %>/edit/<%= subject.id %>" role="button">Edit</a>
                        <a class="btn btn-danger btn-sm" href="/<%= status %>/delete/<%= subject.id %>" role="button">Delete</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <div class="table-container mx-auto mt-5">
        <h4>Lecturers List</h4>
        <a style="float: right;" class="btn btn-success mb-3" href="/<%= status %>/add-lecturer" role="button">Add Lecturer</a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Lecturer Name</th>
                    <th>Action</th>
                </tr>
            </thead>
    
            <tbody>
    
                <% lecturers.forEach((lecturer, index) => { %>
                    <tr>
                        <td class="align-middle"><%= index + 1 %></td>
                        <td class="align-middle">
                            <%= lecturer.name %>
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-primary btn-sm" href="/<%= status %>/edit-lecturer/<%= lecturer.id %>"
                                role="button">Edit</a>
                            <a class="btn btn-danger btn-sm" href="/<%= status %>/delete-lecturer/<%= lecturer.id %>"
                                role="button">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
       
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
        crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
