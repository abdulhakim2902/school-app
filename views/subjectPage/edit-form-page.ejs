<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css"
        integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <link rel="stylesheet" href="/css/style.css">

    <title>Edit Subject</title>
</head>

<body>
    <!-- Navbar -->
    <div class="register-container">
        <div class="register-form">
            <h4 class="mb-5">Edit subject</h4>

            <form action="/admin/edit/<%= subject.id %>" method="POST">

                <label class="mb-1" for="name">Subject name</label>
                <div class="input-group mb-3">
                    <input type="text" name="name" class="form-control" value="<%= subject.name %>" required>
                </div>

                <label class="mb-1" for="lecturer">Lecturer</label>
                <div class="input-group mb-3">
                    <select name="lecturer_id" class="form-control">
                        <% lecturers.forEach(lecturer=> { %>
                            <option <%= lecturer.id === subject.Lecturer.id ? 'selected' : '' %>  value="<%= lecturer.id %>">
                                <%= lecturer.name  %>
                            </option>
                            <% }) %>
                    </select>
                </div>

                <label class="mb-1">Credits</label>
                <div class="mb-3">
                    <input type="number" class="form-control" name="credits" min="2" value="<%= subject.credits %>" required>
                </div>

                <label class="mb-1">Max Students</label>
                <div class="mb-5">
                    <input type="number" class="form-control" name="maxStudents" value="<%= subject.maxStudents %>" min="5" required>
                </div>

                <div style="margin-top: 0;" class="d-grid gap-2 mx-auto register-button">
                    <button style="width: 100%" class="btn btn-primary">Update Subject</button>
                    <a style="width: 100%" href="/admin" class="btn btn-info btn-danger" role="button">Cancel</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
        crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
